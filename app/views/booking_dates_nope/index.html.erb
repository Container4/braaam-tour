<p id="notice"><%= notice %></p>

<h1>Tour Booking Dates</h1>

<table>
  <thead>
    <tr>
      <th>Signup</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @booking_dates.each do |booking_date| %>
      <tr>
        <td><%= booking_date.commit %></td>
        <td><%= link_to 'Show', booking_date %></td>
        <td><%= link_to 'Edit', edit_booking_date_path(booking_date) %></td>
        <td><%= link_to 'Destroy', booking_date, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


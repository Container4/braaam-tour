<%= c "container" do %>
  <%= c "tour/title", text: t("sign_up")  %>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, class: "input" %>
    </div>

    <div class="field">
      <%= f.label :reference_person_full_name %><br />
      <%= f.text_field :reference_person_full_name, class: "input" %>
    </div>

    <div class="field">
      <%= f.label :company_address_line1 %><br />
      <%= f.text_field :company_address_line1, class: "input" %>
    </div>

    <div class="field">
      <%= f.label :company_address_line2 %><br />
      <%= f.text_field :company_address_line2, class: "input" %>
    </div>

    <div class="field">
      <%= f.label :company_city %><br />
      <%= f.text_field :company_city, class: "input" %>
    </div>

    <div class="field">
      <%= f.label :company_npa %><br />
      <%= f.text_field :company_npa, class: "input" %>
    </div>

    <div class="field">
      <%= f.label :company_country %><br />
      <%= f.text_field :company_country, class: "input" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autocomplete: "email", class: "input" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: "input" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "input" %>
    </div>

    <div class="actions">
      <%= f.submit t("sign_up"), class: "submit" %>
    </div>
  <% end %>

  <%= render "companies/shared/links" %>
<% end %>

<%= c "container" do %>
  <%= c "tour/title", text: "My Settings" %>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <% if @company.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@company.errors.count, "error") %> prohibited
        this company from being saved:
      </h2>
      <ul>
        <% @company.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h2>Informations</h2>

  <%= form_with url: company_path, model: current_company, local: true do |form| %>
    <div class="field">
      <%= label_tag :name %><br>
      <%= form.text_field :name, class: "input" %>
    </div>
    <div class="field">
      <%= label_tag :reference_person_full_name %><br>
      <%= form.text_field :reference_person_full_name, class: "input" %>
    </div>
    <div class="field">
      <%= label_tag :company_address_line1 %><br>
      <%= form.text_field :company_address_line1, class: "input" %>
    </div>
    <div class="field">
      <%= label_tag :company_address_line2 %><br>
      <%= form.text_field :company_address_line2, class: "input" %>
    </div>
    <div class="field">
      <%= label_tag :company_npa %><br>
      <%= form.text_field :company_npa, class: "input" %>
    </div>
    <div class="field">
      <%= label_tag :company_country %><br>
      <%= form.text_field :company_country, class: "input" %>
    </div>
    <div class="field">
      <%= label_tag :company_city %><br>
      <%= form.text_field :company_city, class: "input" %>
    </div>

    <%= form.submit "Update", class: "submit" %>
  <% end %>

  <%= c "hr" %>

  <%= c "booking/button", href: tours_path do %>
    Back to tours
  <% end %>

  <%= c "booking/button", href: edit_company_registration_path do %>
    Change my email/password
  <% end %>

  <%= link_to "Cancel my account", registration_path("company"), data: { confirm: "Are you sure?" }, method: :delete, class: "btn red" %>

<% end %>

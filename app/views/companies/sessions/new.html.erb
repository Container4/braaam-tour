<%= c "container" do %>
  <%= c "tour/title", text: t("sign_in")  %>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, Company.human_attribute_name("email") %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
    </div>

    <div class="field">
      <%= f.label :password, Company.human_attribute_name("password") %><br />
      <%= f.password_field :password, autocomplete: "off", class: "input" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, t("remember_me") %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit t("log_in"), class: "submit" %>
    </div>
  <% end %>

  <%= render "companies/shared/links" %>
<% end %>

<!DOCTYPE html>
<html>
  <head>
    <title>BraaamTour</title>
    <%= csrf_meta_tags %>
    <meta content="width=device-width, initial-scale=1" name="viewport">
    <%= stylesheet_pack_tag "application" %>
  </head>

  <body class="body">
    <div>
      <%= c "row" do %>

        <%= c "column", size: 2 do %>
          <%= render 'admin/nav' %>
        <% end %>

        <%= c "column", size: 10 do %>
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
          <%= yield %>
        <% end %>

      <% end %>
    </div>

    <%= javascript_pack_tag "application" %>
  </body>
</html>

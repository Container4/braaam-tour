<h1>Tours</h1>

<%= link_to 'New Tour', new_admin_tour_path %>

<br>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @admin_tours.each do |admin_tour| %>
      <tr>
        <td><%= admin_tour.title %></td>
        <td><%= link_to 'Show', admin_tour_path(admin_tour) %></td>
        <td><%= link_to 'Edit', edit_admin_tour_path(admin_tour) %></td>
        <td><%= link_to 'Destroy', admin_tour_path(admin_tour), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

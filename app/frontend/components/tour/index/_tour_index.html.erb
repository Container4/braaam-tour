<%= c "container" do %>
  <div class="tour-index">
    <%= c "tour/title", text: t('tour_index_title') %>
    <div class="tour-index--list">
      <% unless @tours_collection.empty? %>
        <% @tours_collection.each do |tour| %>
          <div class="tour-item">
            <%= link_to tour, class: "tour-item--link", target: "_blank" do %>
              <% if tour.cover_image.attached? %>
                <%= image_tag tour.cover_image.variant(resize: "400x400>"),
                              class: 'tour-item--image' %>
              <% end %>
              <p class="tour-item--title">
                <strong><%= tour.title %></strong><br>
                <%= tour.tour_caption %><br>
                <%= c "fontawesome_icon", icon: "fas fa-globe" %> <%= tour.artist_country %><br>
                <% unless tour.booking_dates.empty? %>
                  <%= l( tour.booking_dates.first.day, format: :short ) %> -
                  <%= l( tour.booking_dates.last.day, format: :short ) %>
                <% else %>
                  &nbsp;
                <% end %>
                </p>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <%= t('no_tours') %>
      <% end %>
    </div>
  </div>
<% end %>

<%= link_to link, class: "tour-booking-btn js-tour-booking-btn #{"disable" if close?}" do %>
  <div class="tour-booking-btn--text">
    <%= c "date", date: @date.day %>
  </div>
  <div class="tour-booking-btn--status">
    <%= c "fontawesome_icon", icon: "fas fa-calendar-check fa-lg" if status.eql?("mine") %>
    <%= c "fontawesome_icon", icon: "fas fa-calendar-times fa-lg" if status.eql?("booked") %>
  </div>
<% end %>

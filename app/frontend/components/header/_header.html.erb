<header class="header">
  <%= c "container" do %>
    <div class="header--container">
      <div class="header--container--brand">
        <%= link_to "BRAAAM", root_path %>
      </div>
      <nav class="header--container--navigation">
        <%= link_to t(".french"), url_for( :locale => 'fr' ) unless I18n.locale.eql?(:fr) %>
        <%= link_to t(".english"), url_for( :locale => 'en' ) unless I18n.locale.eql?(:en) %>

        <% if company_signed_in? %>
          <%= current_company.name + " | " %>
          <%= link_to "sign_out", destroy_company_session_path, method: :delete %>
        <% end %>

        <%= link_to "sign_in", new_company_session_path unless company_signed_in? %>
      </nav>
    </div>
  <% end %>
</header>
